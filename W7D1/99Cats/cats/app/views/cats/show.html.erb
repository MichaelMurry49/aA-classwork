<h1>Displays cat's info</h1>
<a href="/cats">Go back to all cats</a>
<table>
    <thead>
        <tr>
            <th colspan="1">Cat's info</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Name</td>
            <td><%= @cat.name %></td>
        </tr>

         <tr>
            <td>Color</td>
            <td><%= @cat.color %></td>
        </tr>

         <tr>
            <td>Birthday</td>
            <td><%= @cat.birth_date %></td>
        </tr>

         <tr>
            <td>Age</td>
            <td><%= @cat.age %></td>
        </tr>

         <tr>
            <td>Sex</td>
            <td><%= @cat.sex %></td>
        </tr>

         <tr>
            <td>Description</td>
            <td><%= @cat.description %></td>
        </tr>
    </tbody>
</table>